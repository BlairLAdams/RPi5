#!/bin/bash
# installCronTasks.sh - Sets up cron and sample scheduled task

set -e

echo "⏲️ Installing cron..."
sudo apt update
sudo apt install -y cron

# Enable and start cron
sudo systemctl enable cron
sudo systemctl start cron

# Example: Log uptime every 5 minutes
(crontab -l 2>/dev/null; echo "*/5 * * * * /usr/bin/uptime >> /var/log/uptime.log") | crontab -

echo "✅ Cron installed and sample task created (uptime log every 5 min)"
