{
  "dashboard": {
    "id": null,
    "uid": "ultra-pi-monitor",
    "title": "UltraPiMonitor",
    "tags": [
      "pi",
      "prometheus",
      "node_exporter"
    ],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "gauge",
        "title": "CPU Usage (%)",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 5
        },
        "targets": [
          {
            "expr": "100 - (avg by(instance)(irate(node_cpu_seconds_total{mode='idle'}[5m])) * 100)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        }
      },
      {
        "type": "gauge",
        "title": "Memory Usage (%)",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 5
        },
        "targets": [
          {
            "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        }
      },
      {
        "type": "gauge",
        "title": "Disk Usage (%) /",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 5
        },
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{mountpoint='/'} - node_filesystem_free_bytes{mountpoint='/'}) / node_filesystem_size_bytes{mountpoint='/'} * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        }
      },
      {
        "type": "gauge",
        "title": "Uptime (s)",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 5
        },
        "targets": [
          {
            "expr": "node_time_seconds - node_boot_time_seconds",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 0
          }
        }
      },
      {
        "type": "timeseries",
        "title": "CPU Usage (per core)",
        "gridPos": {
          "x": 0,
          "y": 6,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "100 - (irate(node_cpu_seconds_total{mode='idle'}[5m]) * 100)",
            "refId": "A",
            "legendFormat": "cpu {{cpu}}"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Load Average",
        "gridPos": {
          "x": 12,
          "y": 6,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "node_load1",
            "refId": "A",
            "legendFormat": "1m"
          },
          {
            "expr": "node_load5",
            "refId": "B",
            "legendFormat": "5m"
          },
          {
            "expr": "node_load15",
            "refId": "C",
            "legendFormat": "15m"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Memory Usage (bytes)",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "node_memory_MemTotal_bytes",
            "refId": "A",
            "legendFormat": "Total"
          },
          {
            "expr": "node_memory_MemAvailable_bytes",
            "refId": "B",
            "legendFormat": "Available"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Swap Usage",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "(1 - node_memory_SwapFree_bytes / node_memory_SwapTotal_bytes) * 100",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Disk I/O",
        "gridPos": {
          "x": 0,
          "y": 18,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "rate(node_disk_reads_completed_total[1m])",
            "refId": "A",
            "legendFormat": "reads"
          },
          {
            "expr": "rate(node_disk_writes_completed_total[1m])",
            "refId": "B",
            "legendFormat": "writes"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Network I/O",
        "gridPos": {
          "x": 12,
          "y": 18,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[1m])",
            "refId": "A",
            "legendFormat": "receive"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[1m])",
            "refId": "B",
            "legendFormat": "transmit"
          }
        ]
      }
    ]
  },
  "overwrite": true,
  "folderId": 0
}